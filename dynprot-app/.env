# DynProt Application Environment Variables
# Copy this file to .env.local and update the values for local development

# Application Configuration
VITE_APP_NAME=DynProt
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="DynProt Application - Protein Analysis Tool"

# Environment
VITE_NODE_ENV=development

# API Configuration
VITE_API_URL=http://localhost:3001/api
VITE_API_TIMEOUT=30000

# Authentication
VITE_DEMO_EMAIL=demo@dynprot.com
VITE_DEMO_PASSWORD=Demo123!
VITE_DEMO_NAME="Demo User"

# Encryption
VITE_ENCRYPTION_SECRET=your-secret-key-here-change-in-production
VITE_ENCRYPTION_ITERATIONS=10000

# Features Flags
VITE_ENABLE_DEMO_MODE=true
VITE_ENABLE_VOICE_INPUT=true
VITE_ENABLE_CAMERA_SCAN=true
VITE_ENABLE_AI_ANALYSIS=true
VITE_ENABLE_ENCRYPTION=true

# Analytics & Monitoring
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# AI Services (when implemented)
VITE_OPENAI_API_KEY=
VITE_NUTRITION_API_KEY=
VITE_VISION_API_KEY=

# Storage
VITE_STORAGE_PREFIX=dynprot
VITE_SESSION_TIMEOUT=86400000

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_DEFAULT_LANGUAGE=fr

# Development
VITE_DEBUG_MODE=false
VITE_MOCK_API=false
VITE_SHOW_REDUX_DEVTOOLS=false

# Security
VITE_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
VITE_CSP_ENABLED=true

# Performance
VITE_CACHE_DURATION=300000
VITE_MAX_FILE_SIZE=5242880
VITE_MAX_MEALS_PER_DAY=20

# Social/External Links
VITE_GITHUB_URL=https://github.com/your-org/dynprot-app
VITE_SUPPORT_EMAIL=support@dynprot.com
VITE_PRIVACY_URL=https://dynprot.com/privacy
VITE_TERMS_URL=https://dynprot.com/terms